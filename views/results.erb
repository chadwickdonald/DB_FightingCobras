<body>
  <div class="navbar navbar-fixed-top"><div class="navbar-inner"><div class="container"><a class="brand" href="/">Bart or Drive?</a></div></div></div>
<div class="container" style= "padding-top: 100px">
<!-- <%=params.inspect%> -->
  <br />
  <div class="row-fluid">
    <div class="span12 alert alert-success">
      <h2 class="span6">From: <p><%= @a.origin %></p> </h2>
      <h2 class="span6">To: <p><%= @a.destination %></p></h2>
      <br />
    </div>
  </div>
  <div class="row-fluid" style ="margin-bottom:20px">
    <div class="span6">
      <span class="label label-success">Fastest</span>
      <h1>Fastest Route: <%=@fastest[:mode] %></H1>
      <h3>Travel Time: <%= @fastest[:result].travel_time / 60 %> minutes</h3>
      <h3>Total Cost: $<%= "%.2f" %(@fastest[:result].total_cost / 100.00) %></h3>
      </div>
    <div class="span6">
      <span class="label label-info">Cheapest</span>
      <h1>Cheapest Route: <%=@cheapest[:mode] %>
      <h3>Travel Time: <%= @cheapest[:result].travel_time / 60 %> minutes</h3>
      <h3>Total Cost: $<%= "%.2f" %(@cheapest[:result].total_cost / 100.00) %></h3>
    </div>
  </div>
  <a class = "btn btn-inverse btn-large" href="/">Test out Another Route</a>
</div>
</body>
